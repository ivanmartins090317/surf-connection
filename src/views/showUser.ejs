<%- include ("./layout/header", {title:"Surf x communit:USERS"})%>

 <section class="hero is-medium is-link">
  <div class="hero-body">
    <p class="title">SURFXCOMMUNIT</p>
    <p class="subtitle">
      <div class="buttons">
        
        <a class="button is-primary" href="/views/newUser">
          <strong>Criar Usuario</strong>
        </a>
      
      </div>
    </p>
  </div>
</section> 


<body>
   

    
  
    <div class="card">
      <% users.forEach(user =>{%>
      <div class="card-image">
        <!-- <figure class="image is-2by3">
          <img
            src="https://bulma.io/images/placeholders/1280x960.png"
            alt="Placeholder image"
          />
        </figure> -->
      </div>
      <div class="card-content">
      

        <div class="media">
          <!-- icon bulma -->
           
            
          <div class="media-left">
            <figure class="image     ">
              <!-- componete upload -->
              <div class="file is-boxed is-64x64">
                <label class="file-label">
                  <input class="file-input" type="file" name="resume">
                  <span class="file-cta">
                    <span class="file-icon">
                      <i class="fas fa-upload"></i>
                    </span>
                    <span class="file-label">
                      Choose a fileâ€¦
                    </span>
                  </span>
                </label>
              </div>
            </figure>
          </div>
        

          <div class="media-content">
           
           
            <p class="title is-4"><%=user.firstName%></p>
            <p class="subtitle is-6"><%=user.email%></p>
            <p class="subtitle is-6">ID:<%=user.id%></p>

            <p class="subtitle is-6">WHATSAPP:<%=user.whatsApp%></p>
            <a href="/views/<%= user.id %>?_method=delete" class="button is-danger is-light is-small">Deletar seu usuario</a>
      
          </div>
        </div>
       
       <!-- componente sobre -->
        <div class="section">
          <!-- <%- include("./layout/sobre")%> -->
          <div class="card">
            <header class="card-header">
              <p class="card-header-title">SOBRE</p>
          
              <button class="card-header-icon" aria-label="more options">
                <span class="icon">
                  <i class="fas fa-angle-down" aria-hidden="true"></i>
                </span>
              </button>
            </header>
          
            <div class="card-content">
              <div class="content">
                <a href="#">@bulmaio</a>. <a href="#">#css</a> <a href="#">#responsive</a>
                <br />
           
                <p class="subtitle is-6"><%=user.sobre%></p>
          
                <time datetime="2016-1-1">Criado:<%=user.create_at%></time>

                  
                 <!-- cometarios -->
                 <div class="media is-hidden coment">
                  <figure class="media-left">
                    <p class="image is-64x64">
                      <img src="https://bulma.io/images/placeholders/128x128.png" />
                    </p>
                  </figure>
                  <div class="media-content">
                    <div class="field">
                      <p class="control">
                        <textarea class="textarea" placeholder="Add a comment..."></textarea>
                      </p>
                    </div>
                    <div class="field">
                      <p class="control">
                        <button class="button post" onclick="hiddenItem()">Post comment</button>
                        
                      </p>
                    </div>
                  </div>
                </div>
         
              </div>
            </div>
          
             
           
          
            <footer class="card-footer">
              <a href="#" class="card-footer-item">
                <span class="icon has-text-danger ">
            
                  <i class="fas fa-heart"></i>
                 
                </span>
              </a>
            
              <a onclick="actions()"class="card-footer-item button is-white ">Comentar</a>
              <a href="/views/<%= user.id%>/edit" class="card-footer-item">Editar</a>
            </footer>
          </div>
          
        </div>
       
  
        <hr>
       
      </div>
    
    </div>
    <%})%>
  </body>

</html>
